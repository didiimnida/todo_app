<div class="jumbotron">
  <h1 id="jumbotron_text"><span class="glyphicon glyphicon-pencil"> RememoApp</span></h1>
</div>
<div id="menu_bar" class="btn-group btn-group-justified">
    <%= link_to 'dashboard' , todos_path, :class => 'btn btn-info', id: "news"%>
    <%= link_to 'settings' , user_path(current_user.id), :class => 'btn btn-info', id: "setting"%>
    <%= link_to 'about' , about_path, :class => 'btn btn-info', id: "about" %>
    <%= link_to 'logout' , sessions_path, method: :delete, :class => 'btn btn-info', id: "logout" %>
  </div>
<div class="row">
  <div class="container" id="create_account">
  <h1>Edit Account</h1>
    <%= form_for(@user) do |f| %>
      <% if @user %>
          <%= render partial: "shared/form_error_list", locals: { model: @user } %>
      <% end %>
      <p>
          <%= f.label :email %><br>
          <%= f.text_field :email, class: "form-control" %>
      </p>
      <p>
          <%= f.label :mobile %><br>
          <%= f.text_field :mobile, class: "form-control" %>
      </p>
      <p>
          <%= f.label :password %><br>
          <%= f.password_field :password, class: "form-control" %>
      </p>
      <p>
          <%= f.label :password_confirmation %><br>
          <%= f.password_field :password_confirmation, class: "form-control" %>
      </p>
      <p>
      	  <%= f.label :Turn_on_voice %> <br>
      	  <%= f.check_box :voice %>
      </p>
      <p>
      	  <%= f.label :Turn_on_sms %> <br>
      	  <%= f.check_box :sms %> 
      </p>
      <p>
          <%= f.submit class: "btn btn-info" %>
      </p>
    <% end %>
  </div>  
</div>     

